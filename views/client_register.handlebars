<h2 class="text-center">New Buyer Registration</h2>

{{#if errors}}

    {{#each errors}}

        <div class = "alert alert-danger">{{msg}}</div>

    {{/each}}

{{/if}}

<div class="container">

    <div class="row">

        <div class="col-sm-6 col-md-4 col-md-offset-4">

            <h1 class="text-center login-title">Please fill in the details</h1>

            <div class="account-wall">

                <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"

                    alt="">

                <form class="form-signin" method = "POST" action = "/register">

                <input type="text" class="form-control" name = "name" placeholder="Full Name"  autofocus>

                <input type="text" class="form-control" name = "uname" placeholder="Username" >

                <input type="text" class="form-control" name = "email" placeholder="Email Id" >

                <input type="text" class="form-control" name = "oname" placeholder="Organization name">

                <input type="text" class="form-control" name = "role" placeholder="Buyer or Supplier">

                <input type="password" class="form-control" name = "npass" placeholder="Password" >

                <input type="password" class="form-control" name = "cpass" placeholder="Confirm Password" >

                <button class="btn btn-lg btn-primary btn-block" type="submit">

                    Register</button>

                <label class="checkbox pull-left">

                    <input type="checkbox" value="remember-me">

                    Remember me

                </label>

                <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>

                </form>

            </div>

        </div>

    </div>

</div>