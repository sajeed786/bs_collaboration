<h2 class = "text-left">Welcome Mr. {{username}} </h2>

 

<div class="container">

    <form id = "form_request" method = "POST" action = "/home">

    <div class = "row">

            <div class="col-50">

                <div class = "row">

                                <div class="col-sm-2">

                                                <label for = "Area"> GEO: </label>

                                </div>

                                <div class="col-sm-10">

                                                <select id="location" name="country">

                               <option value="australia">Australia</option>

                               <option value="north america">North America</option>

                               <option value="south america">SOuth America</option>

                               <option value="africa">Africa</option>

                               <option value="asia">Asia</option>

                               <option value="europe">Europe</option>

                               <option value="antarctica">Antarctica</option>

                               </select>

                                </div>

                </div>

            </div>

            <div class="col-50">

                                <div class="row">

                                                <label for = "request-type"> Request Type </label>

                                </div>

                                <div class = "row">

                                                  <input type="radio" name="requesttype" value="new request" checked> New Request<br>

                                                                  <input type="radio" name="requesttype" value="request in process"> Request in Process<br>

                                                                  <input type="radio" name="requesttype" value="completed request"> Completed Request<br>

                                                                  <input type="radio" name="requesttype" value="service receipt"> Service Receipt <br>

                                                                  <input type="radio" name="requesttype" value="satisfaction survey"> Satisfaction Survey<br>

 

                                </div>

            </div>

    </div>

    <div class = "row">

                <button class="btn btn-sm btn-primary btn-block" style = "width: 10%; margin-left: 50%; padding-bottom: 20px" type="submit">Proceed</button>

    </div>

    </form>

    <div class = "row">

                <button class="btn btn-sm btn-primary btn-block" style = "width: 10%; margin-left: 50% " ><a href = "/logout" style = "color:aliceblue">Log Out</a></button>

    </div>

   

</div>